---
import Image from "astro/components/Image.astro"
import Button from "../ui/Button.astro"
---

<header
  id="header"
  class="sticky bg-white/95 backdrop-blur-md top-0 z-50 transition-all duration-300 border-b border-transparent"
>
  <div
    class="flex items-center justify-between max-w-[90rem] py-3 px-8 xl:px-12 2xl:px-0 container mx-auto"
  >
    <a
      href="#home"
      class="transition-transform hover:scale-105 duration-300"
    >
      <Image
        src="/logo.svg"
        alt="Logo de Contract Me"
        width="200"
        height="100"
        class="h-10 sm:h-12 min-w-32"
      />
    </a>

    <nav class="hidden lg:block">
      <ul
        class="flex gap-1 bg-gradient-to-r from-accent-100 to-accent-50 px-4 py-2 rounded-full shadow-sm"
      >
        <li>
          <a
            href="#home"
            class="nav-link px-4 py-2 rounded-full text-sm font-medium text-gray-700 hover:text-primary hover:bg-white transition-all duration-300"
            >Inicio</a>
        </li>
        <li>
          <a
            href="#why"
            class="nav-link px-4 py-2 rounded-full text-sm font-medium text-gray-700 hover:text-primary hover:bg-white transition-all duration-300"
            >¿Por qué?</a>
        </li>
        <li>
          <a
            href="#how"
            class="nav-link px-4 py-2 rounded-full text-sm font-medium text-gray-700 hover:text-primary hover:bg-white transition-all duration-300"
            >¿Cómo funciona?</a>
        </li>
        <li>
          <a
            href="#who"
            class="nav-link px-4 py-2 rounded-full text-sm font-medium text-gray-700 hover:text-primary hover:bg-white transition-all duration-300"
            >¿Qué eres?</a>
        </li>
        <li>
          <a
            href="#faq"
            class="nav-link px-4 py-2 rounded-full text-sm font-medium text-gray-700 hover:text-primary hover:bg-white transition-all duration-300"
            >FAQ</a>
        </li>
      </ul>
    </nav>

    <div class="flex items-center gap-3">
      <div class="hidden sm:block">
        <Button href="https://www.contractme.cloud" variant="primary">
          Comencemos
        </Button>
      </div>

      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 rounded-lg hover:bg-accent-100 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary/30"
        aria-label="Menú"
        aria-expanded="false"
      >
        <svg
          id="menu-icon"
          class="w-6 h-6 text-gray-700"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg
          id="close-icon"
          class="w-6 h-6 text-gray-700 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="lg:hidden max-h-0 overflow-hidden transition-all duration-300 ease-in-out bg-white border-t border-gray-100"
  >
    <nav class="px-4 py-4 space-y-1">
      <a
        href="#home"
        class="mobile-nav-link block px-4 py-3 rounded-lg text-sm font-medium text-gray-700 hover:text-primary hover:bg-accent-50 transition-all duration-300"
      >
        <div class="flex items-center gap-3">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          <span>Inicio</span>
        </div>
      </a>
      <a
        href="#why"
        class="mobile-nav-link block px-4 py-3 rounded-lg text-sm font-medium text-gray-700 hover:text-primary hover:bg-accent-50 transition-all duration-300"
      >
        <div class="flex items-center gap-3">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
            ></path>
          </svg>
          <span>¿Por qué elegir Contract Me?</span>
        </div>
      </a>
      <a
        href="#how"
        class="mobile-nav-link block px-4 py-3 rounded-lg text-sm font-medium text-gray-700 hover:text-primary hover:bg-accent-50 transition-all duration-300"
      >
        <div class="flex items-center gap-3">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span>¿Cómo funciona?</span>
        </div>
      </a>
      <a
        href="#who"
        class="mobile-nav-link block px-4 py-3 rounded-lg text-sm font-medium text-gray-700 hover:text-primary hover:bg-accent-50 transition-all duration-300"
      >
        <div class="flex items-center gap-3">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
          <span>¿Qué eres?</span>
        </div>
      </a>
      <a
        href="#faq"
        class="mobile-nav-link block px-4 py-3 rounded-lg text-sm font-medium text-gray-700 hover:text-primary hover:bg-accent-50 transition-all duration-300"
      >
        <div class="flex items-center gap-3">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          <span>Preguntas Frecuentes</span>
        </div>
      </a>

      <div class="pt-4 sm:hidden">
        <Button
          href="https://www.contractme.cloud"
          variant="primary"
          class="w-full justify-center text-sm"
        >
          Comencemos
        </Button>
      </div>
    </nav>
  </div>
</header>

<style>
  .nav-link.active {
    background: white;
    color: var(--primary);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .mobile-nav-link.active {
    background: rgba(97, 13, 117, 0.1);
    color: var(--primary);
  }

  #mobile-menu.open {
    max-height: 500px;
  }
</style>

<script>
  const header = document.getElementById("header")
  const mobileMenuBtn = document.getElementById("mobile-menu-btn")
  const mobileMenu = document.getElementById("mobile-menu")
  const menuIcon = document.getElementById("menu-icon")
  const closeIcon = document.getElementById("close-icon")
  const mobileNavLinks = document.querySelectorAll(".mobile-nav-link")

  const handleScroll = () => {
    if (!header) return

    if (window.scrollY > 10) {
      header.classList.add("shadow-md", "border-gray-200")
    } else {
      header.classList.remove("shadow-md", "border-gray-200")
    }
  }

  const toggleMobileMenu = () => {
    if (!mobileMenu || !menuIcon || !closeIcon || !mobileMenuBtn) return

    const isOpen = mobileMenu.classList.contains("open")

    if (isOpen) {
      mobileMenu.classList.remove("open")
      menuIcon.classList.remove("hidden")
      closeIcon.classList.add("hidden")
      mobileMenuBtn.setAttribute("aria-expanded", "false")
    } else {
      mobileMenu.classList.add("open")
      menuIcon.classList.add("hidden")
      closeIcon.classList.remove("hidden")
      mobileMenuBtn.setAttribute("aria-expanded", "true")
    }
  }

  const closeMobileMenu = () => {
    if (!mobileMenu || !menuIcon || !closeIcon || !mobileMenuBtn) return

    mobileMenu.classList.remove("open")
    menuIcon.classList.remove("hidden")
    closeIcon.classList.add("hidden")
    mobileMenuBtn.setAttribute("aria-expanded", "false")
  }

  const setActiveLink = () => {
    const sections = document.querySelectorAll("section[id]")
    const navLinks = document.querySelectorAll(".nav-link, .mobile-nav-link")

    let currentSection = ""

    sections.forEach((section) => {
      const htmlSection = section as HTMLElement
      const sectionTop = htmlSection.offsetTop
      const sectionHeight = htmlSection.clientHeight
      if (window.scrollY >= sectionTop - 100) {
        currentSection = section.getAttribute("id") || ""
      }
    })

    navLinks.forEach((link) => {
      link.classList.remove("active")
      if (link.getAttribute("href") === `#${currentSection}`) {
        link.classList.add("active")
      }
    })
  }

  window.addEventListener("scroll", () => {
    handleScroll()
    setActiveLink()
  })

  mobileMenuBtn?.addEventListener("click", toggleMobileMenu)

  mobileNavLinks.forEach((link) => {
    link.addEventListener("click", () => {
      setTimeout(closeMobileMenu, 300)
    })
  })

  document.addEventListener("DOMContentLoaded", setActiveLink)
</script>
