---
import Image from 'astro/components/Image.astro';
import Button from '../ui/Button.astro';
---

<section
  class="relative min-h-dvh flex items-center justify-center mt-12 xl:mt-0"
  id="home"
>
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute hidden md:block top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-secondary/10 rounded-full blur-3xl"
    >
    </div>
  </div>

  <Image
    src="/me.svg"
    alt="Parte del logo de Contract Me"
    class="absolute opacity-10 top-0 left-0 -z-10 w-full h-full"
    width={1920}
    height={1080}
  />

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <div class="order-2 lg:order-1 space-y-4 animate-fade-in-up">
      <h1
        class="text-4xl md:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-gray-900"
      >
        El <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary"
          >futuro</span
        > del
        <strong
          class="text-transparent bg-clip-text bg-gradient-to-r from-secondary to-primary font-semibold"
          >arrendamiento</strong
        >
        empieza aquí
      </h1>

      <div class="space-y-4">
        <p
          class="text-lg 2xl:text-xl text-gray-700 leading-relaxed font-medium"
        >
          Automatiza contratos, firma digitalmente y gestiona todo el ciclo del
          arrendamiento desde una sola plataforma.
        </p>
        <p class="text-base text-gray-600 leading-relaxed">
          Contract Me combina tecnología, legal design y normativa colombiana
          para arrendadores, inmobiliarias y startups que buscan eficiencia,
          claridad y seguridad jurídica.
        </p>
      </div>

      <div class="flex flex-col xl-medium:flex-row gap-4 pt-4">
        <!-- Mobile buttons (without size lg) -->
        <Button
          variant="primary"
          class="md:hidden group shadow-xl hover:shadow-2xl"
          href={`${import.meta.env.PUBLIC_APP_URL}/ingreso`}
        >
          <span class="flex items-center gap-2">
            Crear contrato
            <svg
              class="w-5 h-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </Button>
        <Button
          variant="secondary"
          data-calendly="open"
          class="md:hidden group shadow-lg hover:shadow-xl"
        >
          <span class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            Agendar demo personalizada
          </span>
        </Button>

        <!-- Tablet+ buttons (with size lg) -->
        <Button
          variant="primary"
          size="lg"
          class="hidden md:flex group shadow-xl hover:shadow-2xl"
          href={`${import.meta.env.PUBLIC_APP_URL}/ingreso`}
        >
          <span class="flex items-center gap-2">
            Crear contrato
            <svg
              class="w-5 h-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </Button>
        <Button
          variant="secondary"
          size="lg"
          data-calendly="open"
          class="hidden md:flex group shadow-lg hover:shadow-xl"
        >
          <span class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            Agendar demo personalizada
          </span>
        </Button>
      </div>

      <div
        class="flex flex-wrap items-center gap-8 pt-6 border-t border-gray-200"
      >
        <div class="flex items-center gap-2">
          <div class="flex -space-x-2">
            <div
              class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-secondary border-2 border-white flex items-center justify-center text-white font-bold"
            >
              H
            </div>
            <div
              class="w-10 h-10 rounded-full bg-gradient-to-br from-secondary to-primary border-2 border-white flex items-center justify-center text-white font-bold"
            >
              G
            </div>
            <div
              class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-secondary border-2 border-white flex items-center justify-center text-white font-bold"
            >
              A
            </div>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-900">+500 usuarios</p>
            <p class="text-xs text-gray-600">confían en nosotros</p>
          </div>
        </div>

        <div class="h-12 w-px bg-gray-300"></div>

        <div>
          <div class="flex items-center gap-1 mb-1">
            {
              [...Array(5)].map(() => (
                <svg
                  class="w-5 h-5 text-yellow-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))
            }
          </div>
          <p class="text-xs text-gray-600">4.9/5 valoración promedio</p>
        </div>
      </div>
    </div>

    <div class="order-1 lg:order-2 relative animate-fade-in-right">
      <div
        class="absolute -top-6 -right-6 w-72 h-72 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-3xl blur-2xl"
      >
      </div>
      <div class="relative">
        <div
          class="absolute -bottom-8 -left-4 bg-white rounded-2xl shadow-2xl p-4 border-2 border-primary/20 z-10 animate-float"
        >
          <div class="flex items-center gap-3">
            <div
              class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm font-bold text-gray-900">100% Legal</p>
              <p class="text-xs text-gray-600">Contratos certificados</p>
            </div>
          </div>
        </div>

        <div
          class="absolute -top-8 -right-4 bg-white rounded-2xl shadow-2xl p-4 border-2 border-secondary/20 z-10 animate-float"
          style="animation-delay: 0.3s;"
        >
          <div class="flex items-center gap-3">
            <div
              class="w-12 h-12 bg-gradient-to-br from-secondary to-primary rounded-full flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm font-bold text-gray-900">En minutos</p>
              <p class="text-xs text-gray-600">Rápido y fácil</p>
            </div>
          </div>
        </div>

        <Image
          src="/hero-image.svg"
          class="relative z-0 w-full"
          alt="Imagen representativa de contratos digitales"
          width="600"
          height="400"
        />
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
  }

  .animate-fade-in-right {
    animation: fadeInRight 0.8s ease-out;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>

<script is:inline>
  const CALENDLY_URL =
    'https://calendly.com/alvaropedrozo07/30min?hide_gdpr_banner=1&locale=es';

  function ensureCalendlyLoaded() {
    return new Promise((resolve) => {
      if (
        window.Calendly &&
        typeof window.Calendly.initPopupWidget === 'function'
      ) {
        resolve();
        return;
      }
      const existing = document.querySelector(
        'script[src^="https://assets.calendly.com/assets/external/widget.js"]'
      );
      if (existing) {
        existing.addEventListener('load', () => resolve());
        if (existing.dataset.loaded === '1') resolve();
        existing.onload = () => {
          existing.dataset.loaded = '1';
          resolve();
        };
        return;
      }
    });
  }

  function openCalendlyPopup(e) {
    e?.preventDefault?.();
    window.Calendly.initPopupWidget({
      url: CALENDLY_URL,
      hidden: {
        utm_source: 'landing',
        utm_medium: 'button',
        utm_campaign: 'agendamiento',
      },
    });
  }

  function attachHandlers() {
    const triggers = document.querySelectorAll('[data-calendly="open"]');
    triggers.forEach((el) => {
      el.removeEventListener('click', handleClick, false);
      el.addEventListener('click', handleClick, false);
    });
  }

  async function handleClick(e) {
    await ensureCalendlyLoaded();
    openCalendlyPopup(e);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', attachHandlers);
  } else {
    attachHandlers();
  }
</script>
