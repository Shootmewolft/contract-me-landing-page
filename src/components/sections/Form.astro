                target="_blank"
              >
                +57 302 2738347
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-white/70 mb-1">Horario de Atención</p>
              <p class="text-sm md:text-lg font-semibold">Lunes a Viernes</p>
              <p class="text-sm md:text-lg text-white/90">8:00 AM - 6:00 PM</p>
            </div>
          </div>
        </div>

        <div class="mt-6 md:mt-12 pt-4 md:pt-8 border-t border-white/20">
          <p class="text-sm text-white/70">
            También puedes encontrarnos en nuestras redes sociales
          </p>
          <div class="flex gap-4 mt-4">
            <a
              href="https://www.instagram.com/contractme.ai/"
              class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center hover:bg-white/30 transition-all hover:scale-110"
              aria-label="Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/company/contractme.ai/"
              class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center hover:bg-white/30 transition-all hover:scale-110"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div
      class="bg-white rounded-3xl shadow-2xl p-5 md:p-8 border-2 border-gray-100"
    >
      <form id="contact-form" class="space-y-6">
        <div class="form-group">
          <label
            for="name"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            Nombre completo <span class="text-secondary">*</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-primary focus:outline-none transition-colors text-gray-800 placeholder:text-gray-400"
            placeholder="Juan Pérez"
          />
        </div>

        <div class="form-group">
          <label
            for="email"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            Correo electrónico <span class="text-secondary">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-primary focus:outline-none transition-colors text-gray-800 placeholder:text-gray-400"
            placeholder="juan@ejemplo.com"
          />
        </div>

        <div class="form-group">
          <label
            for="phone"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            Teléfono
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-primary focus:outline-none transition-colors text-gray-800 placeholder:text-gray-400"
            placeholder="+57 300 123 4567"
          />
        </div>

        <div class="form-group">
          <label
            for="subject"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            Tipo de consulta <span class="text-secondary">*</span>
          </label>
          <select
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-primary focus:outline-none transition-colors text-gray-800 bg-white"
          >
            <option value="" disabled selected>Selecciona una opción</option>
            <option value="informacion">Información general</option>
            <option value="precios">Precios y planes</option>
            <option value="soporte">Soporte técnico</option>
            <option value="inmobiliaria">Soy una inmobiliaria</option>
            <option value="otro">Otro</option>
          </select>
        </div>

        <div class="form-group">
          <label
            for="message"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            Mensaje <span class="text-secondary">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="5"
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-primary focus:outline-none transition-colors text-gray-800 placeholder:text-gray-400 resize-none"
            placeholder="Cuéntanos cómo podemos ayudarte..."></textarea>
        </div>
        <div>
          <h3 class="text-primary text-base font-semibold">
            Autorización para el tratamiento de datos personales.
          </h3>
          <p class="text-sm text-gray-600">
            Autorizo de manera previa, expresa e informada a ContractMe para
            recolectar, almacenar y utilizar mis datos personales con la
            finalidad de contactarme, enviar información relacionada con los
            servicios y cumplir con las obligaciones legales aplicables. Declaro
            que conozco mis derechos de acceso, corrección, supresión y
            revocatoria, y que he leído la <a
              href={`${import.meta.env.PUBLIC_CLOUDFRONT_URL}/landing-page/politica_tratamiento_datos_personales.pdf`}
              class="text-primary font-semibold hover:text-secondary transition-colors"
              >política de tratamiento de datos personales</a
            >.
          </p>
        </div>
        <div class="flex items-start gap-3">
          <input
            type="checkbox"
            id="privacy"
            name="privacy"
            required
            class="mt-1 w-5 h-5 rounded border-2 border-gray-300 text-primary focus:ring-2 focus:ring-primary/30"
          />
          <label for="privacy" class="text-sm text-gray-600">
            Acepto el tratamiento de mis datos personales conforme a lo
            anterior.
          </label>
        </div>

        <Button
          type="submit"
          variant="primary"
          class="w-full text-sm md:text-base py-4 shadow-xl hover:shadow-2xl"
        >
          <span class="flex items-center justify-center gap-2">
            <span id="submit-text">Enviar mensaje</span>
            <svg
              id="submit-icon"
              class="w-5 h-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
        </Button>

        <div
          id="form-message"
          class="hidden rounded-xl p-4 text-sm font-medium"
        >
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    box-shadow: 0 0 0 4px rgba(97, 13, 117, 0.1);
  }

  #form-message.success {
    background: linear-gradient(to right, #10b981, #059669);
    color: white;
  }

  #form-message.error {
    background: linear-gradient(to right, #ef4444, #dc2626);
    color: white;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .loading #submit-icon {
    animation: spin 1s linear infinite;
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitText = document.getElementById('submit-text');
  const formMessage = document.getElementById('form-message');

  const showMessage = (message: string, type: 'success' | 'error') => {
    if (!formMessage) return;

    formMessage.textContent = message;
    formMessage.className = `${type} rounded-xl p-4 text-sm font-medium`;
    formMessage.classList.remove('hidden');

    setTimeout(() => formMessage.classList.add('hidden'), 5000);
  };

  const setLoading = (isLoading: boolean) => {
    if (!submitText || !form) return;

    submitText.textContent = isLoading ? 'Enviando...' : 'Enviar mensaje';
    form.classList.toggle('loading', isLoading);

    const submitBtn = form.querySelector(
      'button[type="submit"]'
    ) as HTMLButtonElement;
    if (submitBtn) submitBtn.disabled = isLoading;
  };

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    setLoading(true);

    try {
      const formData = new FormData(form);
      await fetch(import.meta.env.API_URL, { method: 'POST', body: formData });

      showMessage(
        '¡Mensaje enviado con éxito! Te responderemos pronto.',
        'success'
      );
      form.reset();
    } catch (error) {
      showMessage(
        'Error al enviar el mensaje. Por favor, intenta nuevamente.',
        'error'
      );
    } finally {
      setLoading(false);
    }
  });
</script>
