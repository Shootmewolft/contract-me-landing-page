import Button from '@components/ui/Button.astro';
---

<section class="pb-12" id="contact">
  <header class="text-center mb-8 md:mb-16">
    <h2 class="text-3xl lg:text-5xl text-primary font-bold mb-4">
      ¿Tienes dudas? Contáctanos
    </h2>
    <p class="text-base text-gray-600 max-w-2xl mx-auto">
      Estamos aquí para ayudarte. Completa el formulario y nuestro equipo te
      responderá en menos de 24 horas.
    </p>
  </header>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-start">
    <div class="space-y-4 md:space-y-8">
      <div
        class="bg-gradient-to-br from-primary to-secondary rounded-3xl p-6 md:p-8 text-white shadow-2xl"
      >
        <h3 class="text-xl md:text-3xl font-bold mb-6">
          Información de Contacto
        </h3>
        <p class="text-white/90 text-base mb-8">
          Nuestro equipo está disponible para resolver todas tus inquietudes
          sobre ContractMe.
        </p>

        <div class="space-y-3 md:space-y-6">
